package kosta.bank;

public class MyBank {
	private Customer customers[];
	private int customersNum;
	
	public MyBank() {}// default 생성자
	
	
	public MyBank(Customer[] customers, int customersNum) {// 생성자 오버로딩
		super();
		this.customers = customers;
		this.customersNum = customersNum;
	}

	public Customer getCustomer(String id) {
		int idx=0;
		for(int i=0;i<customersNum;i++)
		{
			if(customers[i].getId()==id)
			{
				idx=i;
				break;
			}
			
		}
		return customers[idx];
	}
	
	
	public Customer[] getAllCustomers() {
		return customers;
	}
	public void setCustomers(Customer[] customers) {
		this.customers = customers;
	}
	public int getCustomersNum() {
		return customersNum;
	}
	public void setCustomersNum(int customersNum) {
		this.customersNum = customersNum;
	}
	
	public void addCustomer(String ID, String name, long balance) {
		customers[customersNum] = new Customer(ID, name, balance);
		
	}
	
	
	
}
