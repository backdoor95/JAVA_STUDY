package kosta.Phone;

import java.util.Scanner;

public class Manager {
	//1. addPhoneInfo(){}
	//2. listPhoneInfo(){}
	PhoneInfo people[] = new PhoneInfo[10];
	public Manager() {
		
	}
	public void addPhoneInfo(int count) throws Exception {
		Scanner sc = new Scanner(System.in);

		if (count >= 10) {
			throw new Exception("용량 초과!");
		}

		System.out.println("이름을 입력해주세요");
		String name = sc.nextLine();
		System.out.println("전화번로를 입력해주세요");
		String phoneNo = sc.nextLine();
		System.out.println("생년월일을 입력해주세요");
		String birth = sc.nextLine();
		people[count] = new PhoneInfo(name, phoneNo, birth);
	}
	
	public void listPhoneInfo(int count) {// state로 함수를 만들면 안에 못쓴다. 멤버 변수를  못사용한다.
		for (int i = 0; i < count; i++) {
			people[i].show();
		}
	}
	
}
